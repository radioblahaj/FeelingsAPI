generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model feelings {
  id       Int       @id @default(autoincrement())
  date     DateTime?
  feeling  String?
  note     String?
  userId   String?
  feeling2 String?
  share    Boolean?  @default(false)
  category String?
  category2 String?
  user     User?     @relation(fields: [userId], references: [slackId])
}

model User {
  id       Int       @id @default(autoincrement())
  slackId  String    @unique
  feelings feelings[]
  friends  Friend[]
  key      String? @default("orpheus")
  channel  String?
}

model Friend {
  id       Int     @id @default(autoincrement())
  userId   String    
  friendId String
  user     User    @relation(fields: [userId], references: [slackId])
}